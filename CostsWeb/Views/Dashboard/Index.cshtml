@using System.Web.UI.WebControls
@model dynamic

@{
    ViewBag.Title = "Отчеты";
}

<h2>Отчеты</h2>

<div class="row">
    @using (Html.BeginForm("Index", "Dashboard", FormMethod.Get, new { @role = "form", @class = "form-inline" }))
    {
        @Html.DropDownList("ChartType", ViewBag.ChartTypes as SelectList)
        <label for="dateFrom">С</label>
        <input class="form-control" type="date" name="dateFrom" id="dateFrom" value=@ViewData["DateFrom"]/>
        <label for="dateTo">по</label>
        <input class="form-control" type="date" name="dateTo" id="dateTo" value=@ViewData["DateTo"] />
        <input type="submit" value="reload"/>
    }
</div>

<div class="row">
    <div class="col-xs-12 col-md-6">
        <img src="@Url.Action("Chart", "Dashboard")" />
    </div>
    <div class="col-xs-12 col-md-6">
        <img src="@Url.Action("MonthChart", "Dashboard")"/>
    </div>
</div>

